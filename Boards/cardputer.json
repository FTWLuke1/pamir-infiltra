{
  "name": "M5Cardputer",
  "url": "https://docs.m5stack.com/en/core/Cardputer",
  "vendor": "M5Stack",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],
  "build": {
    "core": "esp32",
    "mcu": "esp32s3",
    "variant": "esp32s3",
    "f_cpu": "240000000L",
    "f_flash": "80000000L",
    "flash_mode": "qio",
    "partitions": "huge_app.csv",
    "extra_flags": [
      "-g0",
      "-Wl,--gc-sections",
      "-Wl,--strip-debug",
      "-DCORE_DEBUG_LEVEL=0",
      "-DARDUINO_USB_MODE=1",
      "-DARDUINO_USB_CDC_ON_BOOT=1",
      "-DM5CARDPUTER",
      "-DUSER_SETUP_LOADED=1",
      "-DUSE_HSPI_PORT=1",
      "-DST7789_2_DRIVER=1",
      "-DTFT_RGB_ORDER=1",
      "-DTFT_WIDTH=135",
      "-DTFT_HEIGHT=240",
      "-DTFT_BACKLIGHT_ON=1",
      "-DTFT_BL=38",
      "-DTFT_RST=33",
      "-DTFT_DC=34",
      "-DTFT_MOSI=35",
      "-DTFT_SCLK=36",
      "-DTFT_CS=37",
      "-DTOUCH_CS=-1",
      "-DSMOOTH_FONT=1",
      "-DSPI_FREQUENCY=20000000",
      "-DSPI_READ_FREQUENCY=20000000",
      "-DSPI_TOUCH_FREQUENCY=2500000",
      "-DKEY_ENTER=0x28",
      "-DKEY_SEMICOLON=0x33",
      "-DKEY_DOT=0x37",
      "-DKEY_BACKTICK=0x35",
      "-DIR_TX_PIN=44",
      "-DIR_RX_PIN=1",
      "-DGROOVE_RX_PIN=1"
    ],
    "arduino": { "usb": "cdc" }
  },
  "upload": {
    "maximum_size": 8388608,
    "maximum_ram_size": 327680,
    "speed": 921600,
    "flash_size": "8MB",
    "require_upload_port": true
  },
  "monitor": { "speed": 115200 },
  "pin_configs": {
    "ir_pins": {
      "tx_options": [
        { "name": "Default", "pin": 44, "description": "Default IR TX pin" },
        { "name": "Grove 1", "pin": 1, "description": "Grove port 1" },
        { "name": "Grove 2", "pin": 2, "description": "Grove port 2" },
        { "name": "M5 IR Mod", "pin": 2, "description": "M5 IR Module TX (Grove 2)" }
      ],
      "rx_options": [
        { "name": "Default", "pin": 1, "description": "Default IR RX pin" },
        { "name": "Grove 1", "pin": 1, "description": "Grove port 1" },
        { "name": "Grove 2", "pin": 2, "description": "Grove port 2" },
        { "name": "M5 IR Mod", "pin": 1, "description": "M5 IR Module RX (Grove 1)" }
      ]
    },
    "rf_pins": {
      "tx_options": [
        { "name": "Default", "pin": 44, "description": "Default RF TX pin" },
        { "name": "Grove 1", "pin": 1, "description": "Grove port 1" },
        { "name": "Grove 2", "pin": 2, "description": "Grove port 2" },
        { "name": "M5 RF Mod", "pin": 2, "description": "M5 RF Module TX (Grove 2)" }
      ],
      "rx_options": [
        { "name": "Default", "pin": 1, "description": "Default RF RX pin" },
        { "name": "Grove 1", "pin": 1, "description": "Grove port 1" },
        { "name": "Grove 2", "pin": 2, "description": "Grove port 2" },
        { "name": "M5 RF Mod", "pin": 1, "description": "M5 RF Module RX (Grove 1)" }
      ]
    }
  }
}