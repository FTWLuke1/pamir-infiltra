{
  "name": "M5StickC-PLUS2",
  "url": "https://docs.m5stack.com/en/core/m5stickc_plus2",
  "vendor": "M5Stack",
  "frameworks": ["arduino"],
  "connectivity": ["wifi", "bluetooth"],
  "build": {
    "core": "esp32",
    "mcu": "esp32",
    "variant": "esp32",
    "f_cpu": "240000000L",
    "f_flash": "40000000L",
    "flash_mode": "dio",
    "partitions": "huge_app.csv",
    "extra_flags": [
      "-DM5STICK_1",
      "-DM5STICK_2",
      "-DM5STICK_C_PLUS_2",
      "-DCONFIG_I2S_PDM_RX",
      "-DUSER_SETUP_LOADED=1",
      "-DST7789_2_DRIVER=1",
      "-DTFT_RGB_ORDER=1",
      "-DTFT_WIDTH=135",
      "-DTFT_HEIGHT=240",
      "-DTFT_BACKLIGHT_ON=1",
      "-DTFT_CS=5",
      "-DTFT_DC=14",
      "-DTFT_RST=12",
      "-DTOUCH_CS=-1",
      "-DTFT_MOSI=15",
      "-DTFT_SCLK=13",
      "-DTFT_BL=27",
      "-DSMOOTH_FONT=1",
      "-DSPI_FREQUENCY=20000000",
      "-DSPI_READ_FREQUENCY=20000000",
      "-DSPI_TOUCH_FREQUENCY=2500000",
      "-DBTN_B_PIN=39",
      "-DBTN_C_PIN=35",
      "-DIR_TX_PIN=19",
      "-DIR_RX_PIN=33",
      "-DGROOVE_RX_PIN=33"
    ],
    "arduino": {}
  },
  "upload": {
    "maximum_size": 8388608,
    "maximum_ram_size": 327680,
    "speed": 921600,
    "flash_size": "8MB",
    "require_upload_port": true
  },
  "monitor": { "speed": 115200 },
  "pin_configs": {
    "ir_pins": {
      "tx_options": [
        { "name": "Default", "pin": 19, "description": "Default IR TX pin" },
        { "name": "GPIO 26", "pin": 26, "description": "GPIO 26" },
        { "name": "GPIO 36/25", "pin": 25, "description": "GPIO 25 (alternative to 36)" },
        { "name": "Grove 32", "pin": 32, "description": "Grove port pin 32" },
        { "name": "Grove 33", "pin": 33, "description": "Grove port pin 33" },
        { "name": "M5 IR Mod", "pin": 32, "description": "M5 IR Module TX (Grove 32)" }
      ],
      "rx_options": [
        { "name": "Default", "pin": 33, "description": "Default IR RX pin" },
        { "name": "GPIO 26", "pin": 26, "description": "GPIO 26" },
        { "name": "GPIO 36/25", "pin": 25, "description": "GPIO 25 (alternative to 36)" },
        { "name": "Grove 32", "pin": 32, "description": "Grove port pin 32" },
        { "name": "Grove 33", "pin": 33, "description": "Grove port pin 33" },
        { "name": "M5 IR Mod", "pin": 33, "description": "M5 IR Module RX (Grove 33)" }
      ]
    },
    "rf_pins": {
      "tx_options": [
        { "name": "Default", "pin": 19, "description": "Default RF TX pin" },
        { "name": "GPIO 26", "pin": 26, "description": "GPIO 26" },
        { "name": "GPIO 36/25", "pin": 25, "description": "GPIO 25 (alternative to 36)" },
        { "name": "Grove 32", "pin": 32, "description": "Grove port pin 32" },
        { "name": "Grove 33", "pin": 33, "description": "Grove port pin 33" },
        { "name": "M5 RF Mod", "pin": 32, "description": "M5 RF Module TX (Grove 32)" }
      ],
      "rx_options": [
        { "name": "Default", "pin": 33, "description": "Default RF RX pin" },
        { "name": "GPIO 26", "pin": 26, "description": "GPIO 26" },
        { "name": "GPIO 36/25", "pin": 25, "description": "GPIO 25 (alternative to 36)" },
        { "name": "Grove 32", "pin": 32, "description": "Grove port pin 32" },
        { "name": "Grove 33", "pin": 33, "description": "Grove port pin 33" },
        { "name": "M5 RF Mod", "pin": 33, "description": "M5 RF Module RX (Grove 33)" }
      ]
    }
  }
}